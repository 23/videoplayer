<?xml version="1.0" encoding="utf-8"?>
<mx:Canvas xmlns:mx="http://www.adobe.com/2006/mxml"
	x="0"
	y="0" 
	width="100%" 
	height="20" 
	backgroundColor="black" 
	backgroundAlpha="0.3"
	verticalScrollPolicy="off" 
	horizontalScrollPolicy="off">
	
	<mx:Metadata>
    	[Event(name="close", type="flash.events.Event")]
	</mx:Metadata>
	<mx:Script>
		<![CDATA[
			[Bindable] private var _message:String = ""; 
			public function set message(m:String):void {_message=m;}
			private function closeHandler():void{
				this.visible=false;
				dispatchEvent(new Event("close", true)); 
			}
		]]>
	</mx:Script>

	<mx:Label top="2" left="10" text="{_message}" color="white" fontSize="11" fontFamily="Arial" />
	<mx:Image
		buttonMode="true" 
		top="2" 
		right="0" 
		source="@Embed('assets/buttons/close.swf')" 
		click="{closeHandler();}"/>
</mx:Canvas>
