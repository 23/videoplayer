<?xml version="1.0" encoding="utf-8"?>                                                                                                                                    
<mx:HBox 
	xmlns:mx="http://www.adobe.com/2006/mxml"
	implements="mx.managers.IFocusManagerComponent"
	focusEnabled="true" 
	tabEnabled="true"
	tabFocusEnabled="true"
	buttonMode="true"  
	keyDown="if (event.keyCode==Keyboard.ENTER) event.target.dispatchEvent(new MouseEvent(MouseEvent.CLICK));"
	initialize="{init()}"
	color="#333333"
	fontFamily="TheSans"
	fontSize="12"
	horizontalGap="2"
	>
	<mx:Script>
		<![CDATA[
			import mx.controls.Image;
			import mx.controls.Label;
			private var imageContainer:Image = new Image();
			private var titleContainer:Label = new Label();
			public function init():void{
				this.addChild(imageContainer);					
				this.addChild(titleContainer);					
			}
			public function set imageSource(source:Object):void {
				imageContainer.source = source;
			}
			public function set title(title:String):void {
				titleContainer.text = title;
			}
		]]>
	</mx:Script>
</mx:HBox> 