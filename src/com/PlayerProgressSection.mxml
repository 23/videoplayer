<?xml version="1.0" encoding="utf-8"?>
<mx:Canvas 
	xmlns:mx="http://www.adobe.com/2006/mxml" 
	width="10" 
	height="10"
	backgroundColor="#cccccc"
	borderColor="black"
	borderThickness="1"
 	borderStyle="solid"
	cornerRadius="{this.width/2}"
	clipContent="false"
	mouseOver="{labelContainer.visible=true;}"	
	mouseOut="{labelContainer.visible=false;}"	
	>

	<mx:Script>
		<![CDATA[
			public var startTime:Number = 0;
			[bindable] public var title:String = '';
			[bindable] public var labelWidth:int = 160;
			[bindable] public var labelBackgroundColor:Number = (styleManager.getColorName('black') as Number);
			[bindable] public var labelTextColor:Number = (styleManager.getColorName('white') as Number);
			[bindable] public var labelFontFamily:String = 'Helvetical, Arial';
			[bindable] public var labelFontSize:Number = 11;
		]]>
	</mx:Script>	
	
	<mx:Canvas 
		id="labelContainer"
		backgroundColor="{labelBackgroundColor}"
		color="{labelTextColor}"
		width="{labelText.width + 6}" 
		height="{labelText.height + 4}" 
		top="-40" 
		horizontalCenter="0" 
		clipContent="false"
		visible="false"
		>
		<mx:Label 
			id="labelText" 
			top="3"
			left="3"
			text="{title}" 
			truncateToFit="true" 
			maxWidth="{labelWidth}"
			fontFamily="{labelFontFamily}"
			fontSize="{labelFontSize}"
			/>
	</mx:Canvas>
	
</mx:Canvas>
